{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    // "baseUrl": ".",
    "paths": {
      "@/*": ["./src*"],
      "@workspace/ui/*": ["../../packages/ui/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}


